# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

%{ api = '/api/1.0' }%

# Home page
GET     /                                       Application.index

GET     /admin                                  module:crud

GET     /stripe                                 stripe.stripe
POST    /stripe                                 stripe.post

POST    ${api}/celebrities/me/products/orders/{orderId}/egraphs     Egraphs.post

# GET     /test/celebrities                       test.celebrities
# GET     /test/products                          test.products
GET     /test/json                              test.json
GET     /test/script                            test.script

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

%{ if (play.id == "test") }%
GET     /test/scenarios                          ScenarioController.list
GET     /test/scenarios/clear                    ScenarioController.clear
GET     /test/scenarios/{name}                   ScenarioController.scenario

%{ if (true) }%
# Catch all
*       /{controller}/{action}                  {controller}.{action}
